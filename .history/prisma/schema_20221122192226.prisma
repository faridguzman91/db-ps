generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(255)
}

model images {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(255)
  image_url   String? @db.VarChar(255)
  category_id Int?

  @@index([category_id])
}

model products {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(255)
  image_url   String? @db.VarChar(255)
  category_id Int?

  @@index([category_id])
}

model text {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(255)
  image_url   String? @db.VarChar(255)
  category_id Int?

  @@index([category_id])
}

model users {
  id    Int     @id @default(autoincrement())
  name  String? @db.VarChar(255)
  email String? @db.VarChar(255)
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String?
}
